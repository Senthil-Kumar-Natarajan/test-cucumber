        <developer>
            <id>SenthilNataraj1982</id>
            <name>SK</name>
            <email>senthilkumar.natarajan1982@gmail.com</email>
        </developer>
    </developers>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <allure.version>1.5.2</allure.version>
        <aspectj.version>1.8.10</aspectj.version>
        <legstar-base>2.0.4</legstar-base>
        <legstar-coxbapi>1.5.8</legstar-coxbapi>
        <legstar-coxbrt>1.5.8</legstar-coxbrt>
        <legstar-jaxbgen>1.6.0</legstar-jaxbgen>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>3.0.0-M5</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.22.2</version>
                <configuration>
                    <threadCount>2</threadCount>
                    <perCoreThreadCount>false</perCoreThreadCount>
                    <parallel>classes</parallel>
                    <includes>
                        <include>**/*Runner*.java</include>
                    </includes>
                    <testFailureIgnore>false</testFailureIgnore>
                 <!--   <systemPropertyVariables>
                        <cucumber.options>&#45;&#45;tags ${cucumber.filter.tags},${cucumber.filter.tags1}</cucumber.options>
                    </systemPropertyVariables>-->
                </configuration>
            </plugin>
            <plugin>
                <groupId>net.masterthought</groupId>
                <artifactId>maven-cucumber-reporting</artifactId>
                <version>3.8.0</version>
                <executions>
                    <execution>
                        <id>execution</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <projectName>CucumberBDD-Report</projectName>
                            <outputDirectory>${project.build.directory}/cucumber-reports-json</outputDirectory>
                            <cucumberOutput>${project.build.directory}/cucumber.json</cucumberOutput>
                            <buildNumber>1</buildNumber>
                            <checkBuildResult>false</checkBuildResult>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

