    <groupId>com.test.bdd</groupId>
    <artifactId>test-cucumber</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>TestCucumber</name>
    <!-- FIXME change it to the project's website -->
    <url>http://test.com</url>
